# ----------- SQL Server (Microsoft) -----------
DB_SERVER=           # SQL Server host/IP
DB_DATABASE=                  # Database name
TRUSTED_CONNECTION=               # Set 'no' if using user/password

# ----------- PostgreSQL (Airflow, metadata, etc.) -----------
POSTGRES_USER=                  # PostgreSQL username
POSTGRES_PASSWORD=              # PostgreSQL password
POSTGRES_DB=                  # PostgreSQL database name

# ----------- Airflow Secret Keys -----------
AIRFLOW__WEBSERVER__SECRET_KEY=your_airflow_web_secret_key
AIRFLOW__CORE__FERNET_KEY=your_airflow_fernet_key

# ----------- Redis (for Celery, caching, etc.) -----------
REDIS_URL=

# ----------- SQLAlchemy Connection String -----------
SQL_ALCHEMY_CONN=

# ----------- GenAI / LLM Keys -----------
OPENAI_API_KEY=your_openai_key
COHERE_API_KEY=your_cohere_key

# ----------- Dagster -----------
DAGSTER_HOME=/absolute/path/to/dagster_pipeline

# ----------- MLflow (Optional) -----------
# MLFLOW_TRACKING_URI=http://localhost:5000

# ----------- Any Other Custom Configs -----------
# CUSTOM_VAR=value

